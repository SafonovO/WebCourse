@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary mt-3">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary mb-3 text-white bg-success">
                <i class="bi bi-plus-square"></i> &nbsp Create new category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped text-center" style="width:100%">
<thead>
    <tr>
        <th>
            Category Name
        </th>
<th>
    Display Order
</th>
<th></th>
    </tr>
</thead>
<tbody>
        @foreach(var obj in Model)
        {
            <tr> <td> @obj.Name </td>
             <td> @obj.DisplayOrder </td>
             <td> 
                 <div role="group">
                     <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary float-start"> <i class="bi bi-pencil-square"></i> Edit</a>
                 <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary float-end"> <i class="bi bi-pencil-square"></i> Delete</a>
                 </div>
             </td>
        </tr>
        }
    </tbody>
</table>