@model ShoppingCart

    <form method="post">
        <div class="card  container">
            <div class="card-header text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Product.Name</h1>
                    <p class="text-warning">@Model.Product.Manufacturer</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="h5 text-main-white text-glow-white pt-2" style="height:30px;">@Model.Product.DeviceClass.Name</span>
                    <span class="h5 text-main-white text-glow-white pt-2" style="height:30px;">@Model.Product.Category.Name</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <textarea class="text-muted text-main-white bg-body" readonly style="resize:none; border:none; outline:none; min-height:80px;margin-top:10px">@Model.Product.Description</textarea>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-main-gray pb-2">List Price: <strike>$@Model.Product.ListPrice.ToString("0.00")</strike></h5>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2 border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 border-bottom">
                                    <div>1-4</div>
                                </div>
                                <div class="p-1 col-2 border-bottom">
                                    <div>5-9</div>
                                </div>
                                <div class="p-1 col-2 border-bottom">
                                    <div>10+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2">
                                <div class="p-1 col-2">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2">
                                    <div>$@Model.Product.Price.ToString("0.00")</div>
                                </div>
                                <div class="p-1 col-2">
                                    <div>$@Model.Product.Price5.ToString("0.00")</div>
                                </div>
                                <div class="p-1 col-2">
                                    <div>$@Model.Product.Price10.ToString("0.00")</div>
                                </div>
                            </div>
                            <div class="row pl-2" style="margin-top:50px">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10"><input class="form-control"  /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-yellow-glow form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    
                </div>
            </div>
        </div>
</form>

