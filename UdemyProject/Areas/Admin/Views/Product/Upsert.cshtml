@model UdemyProject.Models.ViewModels.ProductVM

<form method="post" asp-action="Upsert">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr/>
        </div>
        <div class="mb-3">
    <label asp-for="Product.Name" class="mb-1"></label>
    <input asp-for="Product.Name" class="form-control"></input>
    <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.Manufacturer" class="mb-1"></label>
    <input asp-for="Product.Manufacturer" class="form-control"></input>
    <span asp-validation-for="Product.Manufacturer" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.DeviceClassId" class="mb-1"></label>
    <select asp-for = "Product.DeviceClassId" asp-items = "@Model.DeviceClassList" class="form-select">
        <option disabled selected>--Select Device Class--</option>
    </select>
    <span asp-validation-for="Product.DeviceClassId" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.CategoryId" class="mb-1"></label>
    <select asp-for = "Product.CategoryId" asp-items = "@Model.CategoryList" class = "form-select">
        <option disabled selected>--Select Category--</option>
    </select>
    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.Description" class="mb-1"></label>
    <textarea asp-for="Product.Description" rows ="4" class="form-control"></textarea>
    <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.ListPrice" class="mb-1"></label>
    <input asp-for="Product.ListPrice" class="form-control"></input>
    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.Price" class="mb-1"></label>
    <input asp-for="Product.Price" class="form-control"></input>
    <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.Price5" class="mb-1"></label>
    <input asp-for="Product.Price5" class="form-control"></input>
    <span asp-validation-for="Product.Price5" class="text-danger"></span>
    </div>
    <div class="mb-3">
    <label asp-for="Product.Price10" class="mb-1"></label>
    <input asp-for="Product.Price10" class="form-control"></input>
    <span asp-validation-for="Product.Price10" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-yellow-glow" style="width:150px; margin-left:20px;">
        Back to List
    </a>

    </div>
</form>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
}