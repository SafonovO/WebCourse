@model DeviceClass

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Device class</h2>
            <hr/>
        </div>
    <div class="mb-3">
    <label asp-for="Name" class="mb-1"></label>
    <input asp-for="Name" class="form-control"></input>
    <span asp-validation-for="Name" class="text-danger"></span>    
</div>
    <button type="submit" class="btn btn-green-glow" style="width:150px">Create</button>
    <a asp-controller="DeviceClass" asp-action="Index" class="btn btn-yellow-glow" style="width:150px; margin-left:20px;">
        Back to List
    </a>

    </div>
</form>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />
}
}